<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/web_title_iv_btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_home_24" />

    <LinearLayout
        android:id="@+id/web_title_layout_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/bg_search_box"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/web_title_iv_site_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_baseline_donut_small_24" />
        <EditText
            android:id="@+id/web_title_et_url_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:ellipsize="middle"
            android:background="@android:color/transparent" />

        <ImageView
            android:id="@+id/web_title_iv_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_baseline_search_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/web_title_iv_btn_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:src="@drawable/ic_baseline_menu_24" />

</LinearLayout>
